<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hexurements.MeasurePage"
             Title="Measurements"
             BackgroundColor="{StaticResource BgColor}">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Start Measurement"
                    TextColor="{StaticResource TextColor}"
                    BackgroundColor="{StaticResource BtnColor}"
                    BorderRadius="100" HorizontalOptions="Center"
                    WidthRequest="200" HeightRequest="200" Margin="0, 50"
                    FontSize="24"
                    Clicked="btnMeasure_Clicked"/>
            <ListView x:Name="lstMeasurements">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Data}"
                                       HorizontalTextAlignment="Center"
                                       TextColor="{StaticResource TextColor}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>