<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Hex Picker"
             BackgroundColor="{DynamicResource BgColor}"
             x:Class="Hexurements.HexPage">
    <StackLayout VerticalOptions="Center">

        <Image x:Name="PhotoImage" 
                   HeightRequest="400"/>
        <Button x:Name="CameraButton"
                Text="Take Photo"
                Margin="20"
                BackgroundColor="{DynamicResource BtnColor}"
                TextColor="{DynamicResource TextColor}"
                Clicked="CameraButton_Clicked" />
        <Label x:Name="HexText" 
               HorizontalTextAlignment="Center"
               TextColor="{DynamicResource TextColor}"/>
        <Button
            x:Name="uploadButton"
            Text="Upload Image"
            Clicked="UploadButton_Clicked"/>
    </StackLayout>
</ContentPage>